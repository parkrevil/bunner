{
  "name": "bunner",
  "version": "0.0.1",
  "private": false,
  "description": "Bunner is a web server framework for building web applications with Bun.",
  "keywords": [
    "api",
    "bun",
    "bunner",
    "express",
    "framework",
    "restful"
  ],
  "homepage": "https://github.com/parkrevil/bunner",
  "bugs": {
    "url": "https://github.com/parkrevil/bunner/issues"
  },
  "license": "MIT",
  "author": "revil <revil.com@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/parkrevil/bunner"
  },
  "workspaces": [
    "packages/**/*",
    "examples"
  ],
  "type": "module",
  "scripts": {
    "firebat": "firebat",
    "format": "oxfmt --config .oxfmtrc.jsonc --write .",
    "knip": "knip",
    "lint": "oxlint --config .oxlintrc.jsonc --type-aware --type-check --fix .",
    "prepare": "husky",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "tools:update": "(cd ./packages/oxlint-plugin && bun run build) & p1=$!; (cd ./packages/firebat && bun run build) & p2=$!; wait $p1 && wait $p2 && bun install",
    "tsc": "tsc --noEmit",
    "verify": "bun run tooling/verify"
  },
  "dependencies": {},
  "devDependencies": {
    "@bunner/firebat": "workspace:*",
    "@bunner/oxlint-plugin": "workspace:*",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "^1.3.0",
    "dependency-cruiser": "^17.3.7",
    "husky": "^9.1.7",
    "knip": "^5.63.1",
    "lint-staged": "^16.1.6",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "typescript": "^5"
  }
}
